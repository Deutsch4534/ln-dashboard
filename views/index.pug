extends layout

block content
    section
        h5 Overview

        section(class="dashboard-section")
            h6 Fees Earned
                canvas(class="mt-2" id="feeChart" style="width: 100%; height: 300px;")


        if fees
            section(class="dashboard-section")
                h6(class="font-weight-light") Fees Earned
                div='Today'
                    div(class="badge badge-secondary ml-2")=utils.numberWithCommas(fees.day_fee_sum) + ' sat'
                div='This Week'
                    div(class="badge badge-secondary ml-2")=utils.numberWithCommas(fees.week_fee_sum) + ' sat'
                div='This Month'
                    div(class="badge badge-secondary ml-2")=utils.numberWithCommas(fees.month_fee_sum) + ' sat'

        if inactive_funds
            section(class="dashboard-section")
                div='Inactive funds: ' + utils.numberWithCommas(inactive_funds) + ' sat'
                    i(class="fas fa-info-circle ml-2" data-toggle="tooltip" title="" +
                    "Those are funds that are locked up in inactive channels. Your channel partner is probably offline")

        if lnrr
            section(class="dashboard-section")
                div='Lightning Network Rate of Return (annualised): ' + lnrr + '%'
                    i(class="fas fa-info-circle ml-2" data-toggle="tooltip" title="The LNRR is calculated based on the annualised monthly returns of your channel funds")

        if getinfo
            section(class="dashboard-section") 
                h6(class="font-weight-light") Node Info
                table(class="table table-sm")
                    thead
                        tr
                            td Description
                            td Value
                    tbody
                    each info, description in getinfo
                        tr
                            td=description
                            td=info

        if network
            section(class="dashboard-section")
                h6(class="font-weight-light") Network Info
                table(class="table table-sm")
                    thead
                        tr
                            td Description
                            td Value
                    tbody
                    each info, description in network
                        tr
                            td=description
                            td=info

block scripts
    script(src="/js/index.js")